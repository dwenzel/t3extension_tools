{
  "name": "dwenzel/t3extension-tools",
  "type": "typo3-cms-extension",
  "description": "Tools for TYPO3 CMS extensions",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Dirk Wenzel",
      "email": "t3events@gmx.de",
      "role": "Developer"
    }
  ],
  "require": {
    "typo3/cms-backend": "^12.4 || ^13.4",
    "typo3/cms-core": "^12.4 || ^13.4",
    "symfony/finder": "^5.4 || ^6.0"
  },
  "autoload": {
    "psr-4": {
      "DWenzel\\T3extensionTools\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DWenzel\\T3extensionTools\\Tests\\": "Tests/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "mikey179/vfsstream": "^1.6",
    "phpunit/phpunit": "^9.5",
    "typo3/testing-framework": "^7.0",
    "phpstan/phpstan": "^1.10"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "mkdir -p .Build/log/coverage/",
      "[ -L .Build/Web/typo3conf/ext/t3extension_tools ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/t3extension_tools"
    ],
    "test:unit": [
      "@php .Build/bin/phpunit -c Tests/Build/UnitTests.xml"
    ],
    "test:phpstan": [
      "@php .Build/bin/phpstan analyse -c phpstan.neon"
    ],
    "test": [
      "@test:unit",
      "@test:phpstan"
    ]
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "t3extension_tools",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
